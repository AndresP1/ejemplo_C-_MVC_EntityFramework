@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ElectroSoluciones</h1>
    <p class="lead">Tu tienda On Line - ilumina tus ideas</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Productos</h2>
        <p>
            Acceda a nuestra amplia gama de productos para el hogar.
        </p>
        <p>
            @Html.ActionLink("Ver todos los productos", "Index", "Productos", null, new { @class = "btn btn-default" })
        </p>
    </div>
    @if ((string)Session["Tipo"] == "Cliente")
    {
        <div class="col-md-6">
            <h2>Historial</h2>
            <p>Acceda a su historial de pedidos.</p>
            <p>@Html.ActionLink("Ver mis Pedidos", "Index", "Pedidos", null, new { @class = "btn btn-default" })</p>
        </div>
    }
    @if ((string)Session["Tipo"] == "Empleado")
    {
        <div class="col-md-6">

            <h2>Cargar productos</h2>
            <p>Cargar la base de datos.</p>
            @if (string.IsNullOrEmpty(TempData["MensajeCargaProductos"] as string))
            {
                <p>@Html.ActionLink("Cargar Productos", "CargarProductos", "Home", null, new { @class = "btn btn-default" })</p>
            }
            else
            {
                <p>@TempData["MensajeCargaProductos"]</p>
            }
        </div>
        }
        </div>
